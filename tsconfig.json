{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "*": ["./src/*"],
      "@/*": ["./*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
      }
    ],
    "types": ["@testing-library/jest-dom", "node", "jest", "@storybook/react"]
  },
  "include": [
    "./config/jest/setup-tests.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
}
